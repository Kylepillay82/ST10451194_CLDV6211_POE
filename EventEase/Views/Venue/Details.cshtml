@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>@Model.VenueName</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Venue Image" style="max-width:400px;" />
            }
            else
            {
                <em>No image available</em>
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
