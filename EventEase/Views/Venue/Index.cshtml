@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Venue</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th> <!-- New column -->
            <th>@Html.DisplayNameFor(model => model.First().VenueName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Location)</th>
            <th>@Html.DisplayNameFor(model => model.First().Capacity)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(venue.ImageUrl))
                    {
                        <img src="@venue.ImageUrl" alt="Venue Image" width="100" height="auto" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@venue.VenueName</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
