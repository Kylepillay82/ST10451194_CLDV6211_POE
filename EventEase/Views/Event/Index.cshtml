@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().EventName)</th>
            <th>@Html.DisplayNameFor(model => model.First().EventDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>Venue</th>
            <th>Event Type</th> <!-- New column header -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@item.Venue?.VenueName</td>
                <td>@item.EventType?.Name</td> <!-- New Event Type column -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
